    <script>
        var condicion = 0;
        document.getElementById('comp').style.display="none";
        document.getElementById('comp2').style.display="none";

        function compr1(){
            document.getElementById('comp2').style.display="none"
            document.getElementById('comp').style.display="block"
            condicion = 1
          }
          function compr2(){
            document.getElementById('comp').style.display="none"
              document.getElementById('comp2').style.display="block";
              condicion = 2;
            }

        function generar(){
          var mensaje = "";
          switch (condicion) {
            case 1:
                mensaje="Se generara un formato de compraventa";

                document.location.hrf="/Contratos";

              break;
            case 2:
                mensaje="Se generara un contraro de arrendamiento";

              break;
            case 3:
                  mensaje="Aun no hay formato disponible";

              break;
            case 4:
                  mensaje="Aun no hay formato disponible";

              break;
            default:
                mensaje = "Aun no se ha elegido un tipo de contrato para generar";
                

          }
        }
